doctype xml
feed xmlns="http://www.w3.org/2005/Atom"

    title type="text" = page.title
    link rel="self" type="application/atom+xml" href="{{ site_url }}{{ page.url }}"
    link rel="alternate" type="text/html" href=site_url
    id = site_url
    updated = Time.now.to_xmlschema
    author
        name = settins.author
        email = settings.email
    rights
      Copyright (c) #{ Time.now.year }, #{ settings.author }; All rights reserved.

    -  @posts.each do |post|
      entry
          title type="text" = post.data.title
          id = "urn:uuid:#{ post.uuid }"
          link rel="alternate" type="text/html" href=site.url + post.url
          created = post.data['created-at'].to_xmlschema
          updated = post.data['updated-at'].to_xmlschema
          published = post.date['updated-at'].format("%Y-%m-%dT%H:%M:%SZ")
          - post.category.each do |category|
            category term=category.downcase
          content type="html" xml:base=site_url
            = post.body.xml_escape
