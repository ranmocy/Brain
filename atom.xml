---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">

    <title type="text">{{ page.title }}</title>
    <link rel="self" type="application/atom+xml" href="{{ site.url }}{{ page.url }}" />
    <link rel="alternate" type="text/html" href="{{ site.url }}"/>
    <id>{{ site.url }}</id>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <author>
        <name>{{ site.author }}</name>
        <email>{{ site.email }}</email>
    </author>
    <rights>
      Copyright (c) {{ site.time | date: "%Y" }}, {{ site.author }}; All rights reserved.
    </rights>

    {% for post in site.posts %}
    <entry>
        <title type="text">{{ post.title }}</title>
        <id>urn:uuid:{{ post.uuid }}</id>
        <link rel="alternate" type="text/html" href="{{ site.url }}{{ post.url }}"/>
        <created>{{ post.created-at | date_to_xmlschema }}</created>
        <updated>{{ post.updated-at | date_to_xmlschema }}</updated>
        <published>{{ post.date | date: "%Y-%m-%dT%H:%M:%SZ" }}</published>
        {% for category in post.categories %}<category term="{{ category | downcase }}" />
        {% endfor %}
        <content type="html" xml:base="{{ site.url }}/">
          {{ post.content | xml_escape }}
        </content>
    </entry>
    {% endfor %}
</feed>
